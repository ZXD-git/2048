<UserControl x:Class="_2048.Control_Grid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2048"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60" Background="#fffef9">
    <Grid Width="60" Height="60" Background="#fffef9" Name="grid">
        <Border Width="40" Height="40"  Name="border" ></Border>
        <TextBlock   TextAlignment="Center" VerticalAlignment="Center" FontSize="8"  Name="txt_number"></TextBlock>
    </Grid>
</UserControl>
